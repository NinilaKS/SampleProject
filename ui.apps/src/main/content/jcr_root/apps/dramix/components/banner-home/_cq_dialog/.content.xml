<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <listing
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Multifield With Bean"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <well
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                fieldLabel="Banner Fields">
                                <items jcr:primaryType="nt:unstructured">
                                    <listings
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Listing"
                                        fieldLabel="Listing"
                                        required="{Boolean}false">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            emptyText="Listing"
                                            name="./listing">
                                            <items jcr:primaryType="nt:unstructured">
                                             	<title
                                             		jcr:primaryType="nt:unstructured"
                                             		sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                             		emptyText="Title"
                        							fieldLabel="Title"
                        							name="./title"/>
                                                <subheading
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    emptyText="Sub Heading"
                                                    fieldLabel="Sub Heading"
                                                    name="./subHeading"/>
                                                <heading
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    emptyText="Heading"
                                                    fieldLabel="Heading"
                                                    name="./heading"/>
                                                <buttonlink
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                                                    emptyText="Button Link"
                                                    fieldLabel="Button Link"
                                                    name="./buttonLink"
                                                    rootPath="/content/dramix"/>
                                                <video
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    emptyText="Video"
                                                    fieldLabel="Video"
                                                    name="./video"
                                                    rootPath="/content/dam/dramix"/>
                                            </items>
                                        </field>
                                    </listings>
                                </items>
                            </well>
                        </items>
                    </listing>
                    <newpagecheck
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        checked="{Boolean}false"
                        fieldDescription="When checked, It opens in new Page"
                        name="./newPageCheck"
                        text="Open in New Page"
                        uncheckedValue="{Boolean}false"
                        value="{Boolean}true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
