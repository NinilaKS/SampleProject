<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Header"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <logo
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldDescription="The logo to be displayed on header"
                        fieldLabel="Header Logo"
                        name="./headerLogo"/>
                    <logoLink
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                        fieldDescription="Link to home page"
                        fieldLabel="Header Logo Link"
                        name="./headerLogoLink"
                        rootPath="/content/dramix"/>
                    <softwareTools
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Label for software tools button"
                        fieldLabel="Software Tools Label"
                        name="./softwareToolsLabel"/>
                    <softwareToolsLinks
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                        fieldDescription="Link to software tools page"
                        fieldLabel="Software Tools Link"
                        name="./softwareToolsLink"
                        rootPath="/content/dramix"/>
                    <upcomingEvents
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Label for upcoming events button"
                        fieldLabel="Upcoming Events Label"
                        name="./upcomingEventsLabel"/>
                    <upcomingEventsLink
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                        fieldDescription="Link to upcoming events page"
                        fieldLabel="Upcoming Events Link"
                        name="./upcomingEventsLink"
                        rootPath="/content/dramix"/>
                    <requestQuote
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Label for request a quote button"
                        fieldLabel="Request Quote Label"
                        name="./requestQuoteLabel"/>
                    <requestQuoteLink
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                        fieldDescription="Link to request a quote page"
                        fieldLabel="Request Quote Link"
                        name="./requestQuoteLink"
                        rootPath="/content/dramix"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
